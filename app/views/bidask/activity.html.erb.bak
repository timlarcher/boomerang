
<h1>Trading for <%= @client_name %>, <%= number_to_currency(@payables) %> available for purchase.</h1>

<section class="bid">
<h2>Bid</h2>
<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Quantity</th>
    <th>Amount</th>
  </tr>
  <% @bids.each do |b| %>
  <tr>
    <td><%= b.id %></td>
    <td><%= b.user_id %></td>
    <td><%= b.quantity %></td>
    <td><%= b.amount %></td>
  </tr>
  <% end %>
</table>
</section>

<%= link_to 'bid', new_bidasks_path  %>


<section class="ask">
<h2>Ask</h2>
<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Quantity</th>
    <th>Amount</th>
  </tr>
  <% @asks.each do |a| %>
  <tr>
    <td><%= a.id %></td>
    <td><%= a.user_id %></td>
    <td><%= a.quantity %></td>
    <td><%= a.amount %></td>
  </tr>
<% end %>
</table>
</section>