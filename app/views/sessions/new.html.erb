<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <% if flash.now[:error] %>
    <h2 class="error"> <%= flash.now[:error] %> </h2>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>